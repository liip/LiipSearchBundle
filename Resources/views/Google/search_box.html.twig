<form class="{{ css_class }}" id="cse-search-box-form" action="{{ search_url }}">
    <label for="cse-search-box-input" class="search-label">{% trans from 'LiipSearchBundle' %}search_site{% endtrans %}</label>
    <input type="text" id="cse-search-box-input" class="search-input" name="query" value="{{ query|default('') }}"/>
    <input type="submit" class="button search-button" value="{% trans from 'LiipSearchBundle' %}send{% endtrans %}"/>
</form>
